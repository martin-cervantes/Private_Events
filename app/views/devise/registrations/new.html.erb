<div class="container">
  <h2 class="text-center pt-3 pb-2">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.text_field :full_name, placeholder: 'Your name here', class: 'form-control', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.text_field :username, placeholder: 'Your username here', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, placeholder: 'Your email here', class: 'form-control' %>
    </div>

    <div class="form-group">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, placeholder: 'Your password here', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: 'Confirm password here', class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
