<div class="container">
  <h1>Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, placeholder: 'Your email here', class: 'form-control', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: 'Your password here', class: 'form-control', autocomplete: "current-password" %>
    </div>

    <%= f.submit "Log in", class: 'btn btn-primary' %>

    <%= link_to 'Cancel', root_path, class: 'btn btn-danger' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
