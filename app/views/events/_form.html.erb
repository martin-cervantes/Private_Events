<%= form_for @event do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: 'Event name here', class: 'form-control', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.text_field :details, placeholder: 'Event details here', class: 'form-control', autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.datetime_local_field :date, class: 'form-control', autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.text_field :location, placeholder: 'Event location here', class: 'form-control', autocomplete: "email" %>
  </div>

  <%= f.submit "Save Event", class: 'btn btn-primary' %>
  <%= link_to 'Cancel', user_path(current_user), class: 'btn btn-danger' %>
<% end %>
