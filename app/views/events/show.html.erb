<div class="container">
  <h1 class="text-center pt-3 pb-2">Event</h1>

  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4"><%= @event.name %></h1>
      <p class="lead"><span class="text-white bg-secondary p-1">Details:</span> <%= @event.details %></p>
      <p class="lead"><span class="text-white bg-secondary p-1">Location:</span> <%= @event.location %></p>
      <p class="lead"><span class="text-white bg-secondary p-1">Date:</span> <%= @event.date %></p>
      <p class="lead"><span class="text-white bg-secondary p-1">Host:</span> <%= @event.user.full_name %></p>

      <% if current_user && current_user.id != @event.user_id && @event.date > DateTime.now %>
        <% if current_user.attendees.find_by(event_id: @event.id) %>
          <%= link_to "Delete", event_attendee_path(@event), method: :delete, class: 'btn btn-danger', id: "event_#{@event.id}" %>
        <% else %>
          <%= form_for [ @event, @attendee ] do |f| %>
            <%= f.hidden_field :status, value: 'going' %>
            <%= f.submit 'Join', class: 'btn btn-primary' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
