<!DOCTYPE html>
<html>
  <head>
    <title>Private Events</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container-md">
      <nav class="navbar navbar-expand-lg navbar-light bg-light flex justify-content-between">
        <%= link_to 'Private Events', root_path, class: "navbar-brand font-weight-bolder" %>

        <div class="d-flex flex-row align-items-center">
          <%= render "shared/sessions_links" %>
        </div>
      </nav>

      <%= render "shared/flash_messages" %>

      <%= yield %>
    </div>
  </body>
</html>
