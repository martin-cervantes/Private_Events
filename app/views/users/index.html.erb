<div class="container">
  <h1 class="text-center pt-3 pb-2">All Users</h1>

  <table class = 'table table-hover'>
    <thead class="thead-dark">
      <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Email</th>
        <th>Host</th>
        <th>Attendee</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.events.count %></td>
          <td><%= user.attendees.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
